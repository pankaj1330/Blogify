<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Document</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="container mt-5">
        <% if(locals.blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <div class="row justify-content-center mt-3">
                    <div class="col col-12 col-md-8 col-lg-6">
                        <div class="card">
                            <% if(blog.coverImage) { %>
                                <img src="<%= blog.coverImage %>" class="card-img-top image" alt="..." id="<%= blog.coverImage %>" onerror="err('<%= blog.coverImage %>')" />
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <pre style="display: -webkit-box;-webkit-line-clamp: 3; -webkit-box-orient: vertical;overflow: hidden; font-family: sans-serif; letter-spacing: 1px;text-wrap: wrap;"><%= blog.body %></pre>
                                <a href="/view/<%= blog._id %>" class="btn btn-primary">view</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>  
        <% } else { %>
            <p class="text-center">You don't have any blog <a href="/addBlog">create one</a> </p>
        <% } %>
    </div>
    <%- include('./partials/script.ejs') %>
    <script>
        function err(id){
            const ele = document.getElementById(id);
            ele.style.display = "none";
        }
    </script>
</body>
</html>
